}

Account :: withAmount(){

    cout<<"Enter the amount :";
    cin>>Amount;

    cout<<endl;

    cout<<"Enter The four Digit Pin : ";
    cin>>PIN;

    cout<<endl;

    if (PIN != pin){

        cout<<"Incorrect Pin. Please Enter Correct Pin...!";

        cout<<endl;
        cout<<endl;

        Account :: withAmount();
    }

    else

        if(Amount > Balance)

        cout<<"Insuficient balance";

        else

        Balance = Balance - Amount;

        print();

        return 0;
}

saveAccount :: interest(){

    int t;
    cout<<endl;

    cout<<"Enter time interval in year:";
    cin>>t;

    Balance = Balance * ( 1 + 2 * t );

    print();

    return 0;
}

